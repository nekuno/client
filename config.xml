<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nekuno" version="0.7.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nekuno</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="src/scss/img/icons/72 - hdpi.png" />
        <icon density="mdpi" src="src/scss/img/icons/96 - xhdpi.png" />
        <icon density="hdpi" src="src/scss/img/icons/144 - xxhdpi.png" />
        <icon density="xhdpi" src="src/scss/img/icons/192 - xxxhpdi.png" />
        <splash density="port-ldpi" src="src/scss/img/splash/ldpi.png" />
        <splash density="port-mdpi" src="src/scss/img/splash/mdpi.png" />
        <splash density="port-hdpi" src="src/scss/img/splash/hdpi.png" />
        <splash density="port-xhdpi" src="src/scss/img/splash/xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~1.6.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.3.0" />
</widget>
