<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nekuno" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nekuno</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="src/scss/img/icons/72 - hdpi.png" density="ldpi" />
        <icon src="src/scss/img/icons/96 - xhdpi.png" density="mdpi" />
        <icon src="src/scss/img/icons/144 - xxhdpi.png" density="hdpi" />
        <icon src="src/scss/img/icons/192 - xxxhpdi.png" density="xhdpi" />
        <splash src="src/scss/img/splash/ldpi.png" density="port-ldpi"/>
        <splash src="src/scss/img/splash/mdpi.png" density="port-mdpi"/>
        <splash src="src/scss/img/splash/hdpi.png" density="port-hdpi"/>
        <splash src="src/scss/img/splash/xhdpi.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.0.0" />
    <plugin name="cordova-plugin-whitelist" />
</widget>
